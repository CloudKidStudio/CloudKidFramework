{
    "tags": {
        "allowUnknownTags": false
    },
    "source": {
        "include": [
            "./packages/animation/src/",
            "./packages/bellhop/src/",
            "./packages/captions/src/",
            "./packages/container-client/src/",
            "./packages/core/src/",
            "./packages/debug/src/",
            "./packages/display/src/",
            "./packages/display-animation/src/",
            "./packages/display-scaling/src/",
            "./packages/display-ui/src/",
            "./packages/hints/src/",
            "./packages/languages/src/",
            "./packages/loader/src/",
            "./packages/sound/src/",
            "./packages/states/src/",
            "./packages/utils/src/"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "./node_modules/jsdoc/plugins/markdown",
        "./scripts/jsdoc-es6-fix.js"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles" : true
        },
        "meta": {
            "title": "SpringRoll API Documentation",
            "description": "Documentation for the SpringRoll library and modules",
            "keyword": "springroll, education, pbs kids, pbskids, html5, cross-platform, publishing, documentation, docs"
        },
        "applicationName": "SpringRoll",
        "copyright": "SpringRoll Copyright Â© 2013-2017 CloudKid, LLC",
        "linenums": true
    },
    "markdown"  : {
        "parser": "gfm"
    },
    "opts": {
        "encoding": "utf8",
        "recurse": true,
        "private": false,
        "lenient": true,
        "destination": "./docs",
        "template": "./node_modules/jaguarjs-jsdoc"
    }
}